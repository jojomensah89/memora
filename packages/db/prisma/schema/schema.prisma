generator client {
  provider = "prisma-client"
  output   = "../generated"
  moduleFormat = "esm"
  runtime = "bun"
}

// Database Strategy:
// - Development: SQLite (fast, zero config, file-based)
// - Production: PostgreSQL (scalable, robust, cloud-ready)
// Switch by changing provider and DATABASE_URL in .env
datasource db {
  provider = "sqlite"  // Change to "postgresql" for production
  url      = env("DATABASE_URL")
}

// Rate limit table for Better Auth and API rate limiting
model RateLimit {
  id          String   @id @default(cuid())
  key         String   @unique
  count       Int
  lastRequest BigInt

  @@map("rateLimit")
}
