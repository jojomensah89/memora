{
  "name": "memora",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.8.2",
      "better-auth": "^1.3.13",
      "ai": "^5.0.49",
      "@ai-sdk/google": "^2.0.13",
      "@ai-sdk/anthropic": "^2.0.17",
      "@ai-sdk/openai": "^2.0.11",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "@prisma/client": "^6.15.0",
      "@polar-sh/better-auth": "^1.1.3"
    }
  },
  "scripts": {
    "prepare": "husky",
    "check": "biome check --write .",
    "lint:staged": "bun run scripts/lint-staged.ts",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "test": "echo \"No tests yet\" && exit 0",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @memora/db db:push",
    "db:studio": "turbo -F @memora/db db:studio",
    "db:generate": "turbo -F @memora/db db:generate",
    "db:migrate": "turbo -F @memora/db db:migrate"
  },
  "dependencies": {
    "@tokenlens/helpers": "^1.3.1",
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.2.6",
    "ultracite": "5.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsdown": "^0.15.5",
    "@types/bun": "^1.2.6"
  },
  "packageManager": "bun@1.3.0"
}
